{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"max-len": [
			"error",
			{
				"code": 100,
				"comments": 100
			}
		],
        "linebreak-style": [
            "error",
            "windows"
		],
		"no-unused-vars": "warn",
		"quote-props": [
			"error",
			"as-needed"
		],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}